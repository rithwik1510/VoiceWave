{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VoiceWave Local Core",
  "version": "0.1.2",
  "identifier": "com.voicewave.localcore",
  "build": {
    "beforeDevCommand": "npm run dev -- --host 127.0.0.1 --port 5173 --strictPort",
    "beforeBuildCommand": "npm run build",
    "beforeBundleCommand": "powershell -ExecutionPolicy Bypass -File ./scripts/tauri/prepare-tauri-bundle-windows.ps1",
    "devUrl": "http://127.0.0.1:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "VoiceWave Local Core",
        "width": 1400,
        "height": 920,
        "minWidth": 1024,
        "minHeight": 700
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri: asset: data: blob:; img-src 'self' data: blob: https:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https://*.googleapis.com https://*.firebaseio.com https://*.firebaseapp.com https://identitytoolkit.googleapis.com https://securetoken.googleapis.com https://firestore.googleapis.com http://127.0.0.1:7699 ws://127.0.0.1:*; media-src 'self' blob:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "windows/WebView2Loader.dll": "WebView2Loader.dll"
    },
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "startMenuFolder": "VoiceWave"
      },
      "wix": {
        "language": "en-US"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
